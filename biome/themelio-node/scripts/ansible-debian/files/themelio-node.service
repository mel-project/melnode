[Unit]
Description=themelio-node
Requires=docker.service
After=docker.service
[Service]
Restart=always
User=debian
ExecStartPre=/usr/local/bin/docker-compose -f /home/debian/compose/docker-compose.yml down -v
ExecStart=env HOSTNAME=%H /usr/local/bin/docker-compose -f /home/debian/compose/docker-compose.yml up
ExecStop=/usr/local/bin/docker-compose -f /home/debian/compose/docker-compose.yml down -v
[Install]
WantedBy=multi-user.target