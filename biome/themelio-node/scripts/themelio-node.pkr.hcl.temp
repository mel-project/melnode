build {
  sources = [
    "source.openstack.themelio-node-bhs5",
  ]

  provisioner "shell" {
    expect_disconnect = true
    inline            = [
      "sleep 30",
      "echo 'yes' | sudo pacman -Syu",
      "echo 'yes' | sudo pacman -S ansible",
      "sudo reboot"
    ]
  }

  provisioner "ansible-local" {
    playbook_file = "$SCRIPTS_DIRECTORY/ansible/install.yml"
    extra_arguments = [
      "--extra-vars", "openstack_region=bhs5"
    ]
  }
}

